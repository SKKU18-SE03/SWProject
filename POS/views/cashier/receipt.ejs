<%- include('../partial/header.ejs') %>
<%- include('../partial/menu.ejs') %>

<div class="container">

<h1>Order <%= orderMenu[0].OdN %></h1>
<table  class="table table-striped">
    <tr>
        <td>No</td>
        <td>Name</td>
        <td>Price</td>
        <td>Qty</td>
        <td>Total</td>
    </tr>
    <% let total = 0 %>
    <% for(let i=0; i < orderMenu.length; i++){ %>
        <tr>
            <td><%= i+1 %></td>
            <%let j;
              for(j = 0; j < menu.length; j++){
                  if(orderMenu[i].Menu_ID == menu[j].Menu_ID) break;
              }%>
            <td><%= menu[j].Name %></td>
            <td><%= helper.krwString(menu[j].Price) %></td>
            <td><%= orderMenu[i].Menu_count %></td>
            <td><%= helper.krwString(menu[j].Price * orderMenu[i].Menu_count) %></td>
            <% total += menu[j].Price * orderMenu[i].Menu_count %>
        </tr>
    <% } %>
    <tr>
        <td colspan="3"></td>
        <td><h3>Total: </h3></td>
        <td><h3><%= helper.krwString(total) %></h3></td>
    </tr>
</table>


<a class="btn btn-primary btn-lg btn-block" href="/cashier/<%= orderMenu[0].OdN %>/pay">PAY</a><br><br><br>

<%- include('../partial/footer.ejs') %>
