<%- include('../partial/header.ejs') %>
<%- include('../partial/menu.ejs') %>

<div class="container">

    <h2>Form Menu</h2>
    <% if(err != undefined){%>
    <p style="color:red"><%=err.err%></p>
    <% } %>

    <form method="POST" action="/menus/edit/<%= data.Menu_ID %>">
        <div class="form-group">
            <label for="name">Name of Menu:</label>
            <input value="<%= data.Name %>" type="text" class="form-control" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="price">Price of Menu:</label>
            <input value="<%= data.Price %>" type="text" class="form-control" name="price" id="price">
        </div>
       
              
        <button type="submit" class="btn btn-default">Save</button>
      </form>

</div>
